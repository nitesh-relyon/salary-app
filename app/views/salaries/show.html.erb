
<%= wicked_pdf_stylesheet_link_tag "bootstrap.css" -%>
<%= wicked_pdf_stylesheet_link_tag "pdf" %>
<div style="background-color: white!important;">
  <div style="float: left"><%= wicked_pdf_image_tag('download', height: '100', width: '100') %></div>
  <div style="float: right"><%= wicked_pdf_image_tag('download', height: '100', width: '100') %></div>
  <br>
  <div style="text-align: center; font-size: 25px"><b>Salary App Inc. </b></div>
  <br>
  <div style="text-align: center; font-size: 20px"><b>California</b><br></div>
  <div style="text-align: center; font-size: 20px"><br>
    <b> Pay Slip for the month of <%= Date.today.strftime("%B") %>-<%= Date.today.year %></b></div>
    <div class="container" style="padding-top: 5%!important; font-size: 18px; background-color: white!important">
      <div class="row">
        <div class="column">
          <label><b>Employee Id : </b></label>
          <%= @employee.id %>
        </div>
      </br>
      <div class="column">
        <label><b>Name:</b></label>
        <%= @employee.name %>
      </div>
    </br>
    <div class="column">
      <label><b>Email:</b></label>
      <%= @employee.email %>
    </div>
  </div>
</br>

</div>




<table class="table table-sm table-dark">

    <tr>
      <th>Earnings</th>
      <th>Amount</th>
      <th>Deductions</th>
      <th>Amount</th>
    </tr>
    <% @earnings.each do |earning,id| %>
    <tr>
      <td><%= earning %></td>
      <td><%= SalaryAllotment.where(:employee_id => @employee.id).last[earning.downcase] %></td>


      <% end %>
    </tr>
  </table>
</br>

  <table>
    <tr>
      <th> Leave Type </th>
      <th> Leave Date </th>
    </tr>
    <% @leaves.each do |leave| %>
    <tr>
      <td><%= leave.leave_type %> </td>
      <td><%= leave.leave_date %></td>
      <% end %>
    </tr>
   </table>
</div>