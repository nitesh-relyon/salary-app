<p id="notice"><%= notice %></p>

<h1>All Employee Details</h1>
</br>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-dark">

     <tr>
      <th>Employee Id</th>
       <th>Name</th>
       <th>Email</th>
       <th>Address</th>
       <th>Joining Date</th>
       <th>Gender</th>
       <th>Edit</th>
       <th>Delete</th>
       <th colspan="3"></th>
     </tr>
    </thead>

   <tbody>
     <% @employees.each do |employee| %>
       <tr>
         <td><%= employee.id %></td>
         <td><%= employee.name %></td>
         <td><%= employee.email %></td>

         <td><%= employee.address %></td>
         <td><%= employee.joining_date.strftime("%d/%m/%Y") %></td>
         <td><%= employee.gender.capitalize %></td>

         <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-primary' %></td>
         <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
</div>
<br>

<%= link_to 'New Employee', new_employee_path, class: "btn btn-primary"%>
